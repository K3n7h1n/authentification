<html>
  <body>
    <h1>Inscription</h1>
    <!-- Formulaire classique -->
    <form id="registerForm">
      <input name="email" type="email" placeholder="Email" required /><br>
      <input name="password" type="password" placeholder="Mot de passe" required /><br>
      <input name="passwordConfirm" type="password" placeholder="Confirmez le mot de passe" required /><br>
      <button type="submit">S'inscrire</button>
    </form>

    <hr>

    <!-- Connexion avec GitHub -->
    <button id="githubLogin">Se connecter avec GitHub</button>

    <p id="msg"></p>
    <p>Déjà un compte ? <a href="/login">Se connecter</a></p>

    <script type="module">
      const { pb } = await import('/lib/pb.js');

      // --- Inscription classique ---
      const form = document.getElementById("registerForm");
      form.onsubmit = async (e) => {
        e.preventDefault();
        const email = form.email.value;
        const password = form.password.value;
        const passwordConfirm = form.passwordConfirm.value;

        try {
          // Création utilisateur
          await pb.collection("users").create({
            email,
            password,
            passwordConfirm,
          });

          // Envoi email de vérification
          await pb.collection("users").requestVerification(email);

          document.getElementById("msg").textContent =
            "Inscription réussie ! Un email de vérification a été envoyé.";
        } catch (err) {
          document.getElementById("msg").textContent = "Échec de l'inscription";
          console.error(err);
        }
      };

      // --- Connexion via GitHub ---
      const githubBtn = document.getElementById("githubLogin");
      githubBtn.onclick = async () => {
        try {
          // Lancement de l'OAuth GitHub (PocketBase gère la redirection)
          const authData = await pb.collection("users").authWithOAuth2({
            provider: "github",
          });

          console.log("Utilisateur connecté :", authData);
          document.getElementById("msg").textContent =
            "Connexion réussie avec GitHub !";
        } catch (err) {
          document.getElementById("msg").textContent =
            "Échec de la connexion avec GitHub";
          console.error(err);
        }
      };
    </script>
  </body>
</html>
